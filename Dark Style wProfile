/*==============================*\
  !VARIABLES
\*------------------------------*/

@keyframes bgcolor {
  0% {
    background-color: #2db039
  }

  20% {
    background-color: #26448f
  }

  40% {
    background-color: #f9d457
  }

  60% {
    background-color: #a12f31
  }

  80% {
    background-color: #c3c3c3
  }
  
  100% {
    background-color: #2db039
    }
}

:root {
	/* USER OPTIONS
	 * 
	 * toggleStats / Toggles list statistics (found in the footer)
	 * valid values: visible / hidden
	 * 
	 * togglePV / Toggles anime preview video icons.
	 * valid values: visible / hidden
	 *  
	 * bgDimness / Changes dimming of background / Higher = Dimmer.
	 * min value: 0% / max value: 100%
	 *  
	 * imageBrightness(Hov) / Changes lightness of cover images / Higher = Brighter.
	 * min value: 0% / max value: 100%
	 */
	
	--toggleStats: hidden;
	--togglePV: hidden;
	--bgDimness: 50%;
	--imageBrightness: 52%;
	--imageBrightnessHov: 32%;
	
	/* THEME
	 * 
	 * Colours are HSL values but without their surrounding parentheses.
	 * To get the correct values, simply strip away the surrounding parentheses and blurb.
	 * For instance, "hsl(244, 42%, 82%)" would simply become "244, 42%, 82%".
	 * For help with HSL: https://www.w3schools.com/colors/colors_hsl.asp
	 * 
	 * This theme was made with a dark theme in mind, light themes may look rather poor.
	 * More advanced CSS may be required if this is the case.
	 */
	
	--bg: 240, 3%, 9%;
	--bgAlt: 240, 3%, 14%;
	--btn: 240, 3%, 16%;
	--btnLight: 240, 2.7%, 19%;
	--btnAccent: 240, 17%, 34%;
	--border: 240, 5%, 6%;
	--accent: 240, 75%, 77%;
	
	--textBright: 0, 0%, 100%;
	--textMid: 0, 0%, 88%;
	--textDim: 0, 0%, 80%;
	--textProminent: 27, 87%, 67%;
	--textLinkHov: 240, 50%, 80%;
	--textIcon: 0, 0%, 83%;
	
	--all:#ffffff;
	--watching: #2db039;
	--completed: #26448f;
	--onhold: #f9d457;
	--dropped: #a12f31;
	--plantowatch: #c3c3c3;
	
	/* INTERNALS
	 * 
	 * More advanced theme details, used throughout the theme.
	 */
	
	--font: "Sarabun", "Segoe UI", "Arial", "FontAwesome", sans-serif;
	
	--timeText: 60ms;
	--timeButton: 160ms;
	--timeButtonLarge: 260ms;
	--timeItem: 120ms;
	--timeMenu: 350ms;
	--bezierFast: cubic-bezier(.38,.32,.25,1);
	--bezierSmooth: cubic-bezier(.45,.32,.25,1);
	--bezierItemBounce: cubic-bezier(.6,.48,.7,1.45);
	--delayMenu: 333.4ms;
	
	--arrowUp: url(https://files.catbox.moe/uure2q.svg);
	--arrowRt: url(https://files.catbox.moe/lqi5fy.svg);
	--arrowDn: url(https://files.catbox.moe/m9ot24.svg);
	--arrowLt: url(https://files.catbox.moe/68o5bn.svg);
}


